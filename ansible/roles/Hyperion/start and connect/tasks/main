---
# Run this on Guest, it will use `delegate` to tell Host to boot it first!

- name: Start a VM
  become: true
  community.libvirt.virt:
    name: "{{vm_name}}"
    state: running
  delegate_to: "{{item}}"
  loop: "{{ groups['host'] }}"

- name: Wait for VM to boot
  ansible.builtin.wait_for_connection:
    sleep: 10

# - debug:
#     msg: "VM Started!"
